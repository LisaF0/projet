{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}
{% block stylesheets %}
{{ parent()  }}

<script src="https://polyfill.io/v3/polyfill.min.js?version=3.52.1&features=fetch"></script>
<script src="{{ asset('js/script.js') }}" defer></script>

{% endblock %}
{% block body %}
    {% block nav %}{{ parent() }}{% endblock %}
    
    {% if items | length > 0 %}
        <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.unitprice ~ '€' }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.unitprice * item.quantity ~ '€' }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id': item.product.id }) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>  
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total : </td>
                <td>{{ total ~ '€'}}</td>
                {% if app.user %}
                    <td> </td>
                {% else %}
                    <td> </td>
                {% endif %}
            </tr>
        </tfoot>
        </table>
        <p>
            <a href="{{ path('shipAdd_add') }}" class="btn btn-primary">Ajouter une adresse</a>
        </p>
        {# <p>
            {{ form(formSA) }}
        </p> #}

        {# <p>Moyen de paiement :</p> #}
        {% if app.user %}
            <button id="checkout-button">Checkout</button>
        {% else %}
            <p><a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a></p>
        {% endif %}
        <p></p>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
    {% block footer %}{{ parent() }}{% endblock %}
    
{% endblock %}
{% block javascripts %}
<script type="text/javascript">
      // Create an instance of the Stripe object with your publishable API key
      var stripe = Stripe('pk_test_51HvgjELyEjuAwgbZePdTWvQMgmdhI1uAxfEmwx6zqvuSrYSVru4XukNzFhOEaSNPz6torjLLNySw1kz0JgkUNhBv00vg0FnJ8K');
      var checkoutButton = document.getElementById('checkout-button');

      checkoutButton.addEventListener('click', function() {
        // Create a new Checkout Session using the server-side endpoint you
        // created in step 3.
        fetch('/create-checkout-session', {
          method: 'POST',
        })
        .then(function(response) {
          return response.json();
        })
        .then(function(session) {
          return stripe.redirectToCheckout({ sessionId: session.id });
        })
        .then(function(result) {
          // If `redirectToCheckout` fails due to a browser or network
          // error, you should display the localized error message to your
          // customer using `error.message`.
          if (result.error) {
            alert(result.error.message);
          }
        })
        .catch(function(error) {
          console.error('Error:', error);
        });
      });
    </script>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}

{% block body %}
    {% block nav %}{{ parent() }}{% endblock %}
    {% if items | length > 0 %}
        <table class="table">
        <thead>
            <tr>
                <th>Produit</th>
                <th>Prix</th>
                <th>Quantité</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.unitprice ~ '€' }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.unitprice * item.quantity ~ '€' }}</td>
                    <td>
                        <a href="{{ path('cart_remove', {'id': item.product.id }) }}" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash"></i>
                        </a>  
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-right">Total : </td>
                <td>{{ total ~ '€'}}</td>
                <td> <a href="{{ path('ordered') }}" class="btn btn-primary">Commander</a></td>
            </tr>
        </tfoot>
        </table>
    {% else %}
        <p>Votre panier est vide.</p>
    {% endif %}
    {% block footer %}{{ parent() }}{% endblock %}
{% endblock %}

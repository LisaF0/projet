{% extends 'base.html.twig' %}

{% block title %}Hello CartController!{% endblock %}
{% block stylesheets %}
    {{ parent()  }}
{% endblock %}
{% block body %}
    {% block nav %}
        {{ parent() }}
    {% endblock %}
    <section class="cartSection">
        <div id="cartHeader">
            <h1>Mon panier : {{ items|length }} articles</h1>
            {% if items|length > 0 %}
                <a href="{{ path('cart_clear') }}"class="btn btn-danger" data-toggle="tooltip" data-placement="bottom" title="Vider le panier"><i class="fas fa-trash"></i></a>
            {% endif %}
        </div>
        {% if items|length > 0 %}
        {% for item in items %}

            <article>
                <img src="{{ asset('img/' ~ item.product.photo )}}" alt="{{ 'Bouteille de ' ~ item.product.name }}" class="winePhoto">
                <div class="descProduct">
                    <h2>{{ item.product.name ~ " " ~ item.product.year ~ " Domaine " ~ item.product.domain.name }}</h2>
                    
                    <p>Prix à l'unité : {{ item.product.unitprice ~ '€'}}</p>
                    {% if item.product.unitstock > 0 %}
                        <p><i class="fas fa-check greenColor"></i> Disponible</p>
                    {% else %}
                        <p><i class="fas fa-times redColor"></i> Indisponible</p>
                    {% endif %}
                    
                    <p>Quantité : {{ item.quantity }}</p>
                    <p>Sous-total : {{ item.product.unitprice * item.quantity ~ '€' }}</p>
                </div>
                    <a href="{{ path('cart_remove', {'id': item.product.id }) }}" class="btn btn-sm cartRemoveButton">
                        <i class="fas fa-times"></i>
                    </a>  
            </article>
        {% endfor %}
        <div id="cartFooter">
            <p class="cartTotal font-weight-bold m-0 p-2">Total : {{ total ~ " €" }}</p>
            {% if app.user %}
                <a href="{{ path('choose_address') }}" class="btn btn-primary cartButton font-weight-bold p-3">Passer commande</a>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary cartButton font-weight-bold p-3">Passer commande</a>
            {% endif %}
        </div>
        

        
